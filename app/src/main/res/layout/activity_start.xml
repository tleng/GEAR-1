<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#FFFFFF">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Started!"
        android:id="@+id/StartedButton"
        android:layout_marginTop="42dp"
        android:clickable="true"
        android:onClick="getStartedClick"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#FFFFFF"
        style="?android:attr/borderlessButtonStyle"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton"
        android:text="@string/vocabList"
        android:drawableTop="@mipmap/ic_vocablist"
        android:layout_alignTop="@+id/imageButton2"
        android:layout_toLeftOf="@+id/StartedButton"
        android:layout_toStartOf="@+id/StartedButton"
        android:background="#FFFFFF"
        style="?android:attr/borderlessButtonStyle"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton2"
        android:text="@string/stories"
        android:drawableTop="@mipmap/ic_stories"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/StartedButton"
        android:layout_toEndOf="@+id/StartedButton"
        android:clickable="true"
        android:background="#FFFFFF"
        android:onClick="goToStoriesSelectionOnClick"
        style="?android:attr/borderlessButtonStyle"/>



</RelativeLayout>
