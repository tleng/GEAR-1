<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#FFFFFF">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@mipmap/ic_settings"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="105dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="G.E.A.R."
        android:id="@+id/textView2"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="#FFFFFF"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Willkommen"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:background="#FFFFFF"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Settings"
        android:id="@+id/button"
        android:drawableTop="@mipmap/ic_user_settings"
        style="?android:attr/borderlessButtonStyle"
        android:background="#FFFFFF"
        android:onClick="goToUserSettingsOnClick"
        android:clickable="true"
        android:layout_alignBottom="@+id/imageButton"
        android:layout_alignRight="@+id/suggestedReadingsButton"
        android:layout_alignEnd="@+id/suggestedReadingsButton"
        android:layout_marginRight="0dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Suggested Stories"
        android:id="@+id/suggestedReadingsButton"
        android:drawableTop="@mipmap/ic_stories"
        style="?android:attr/borderlessButtonStyle"
        android:background="#FFFFFF"
        android:onClick="goToSuggestedStories"
        android:clickable="true"
        android:layout_alignTop="@+id/imageButton2"
        android:layout_toLeftOf="@+id/textView"
        android:layout_toStartOf="@+id/textView"
        android:layout_marginRight="20dp" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton2"
        android:text="@string/stories"
        android:drawableTop="@mipmap/ic_stories"
        android:clickable="true"
        android:background="#FFFFFF"
        android:onClick="goToStoriesSelectionOnClick"
        style="?android:attr/borderlessButtonStyle"
        android:layout_below="@+id/textView2"
        android:layout_toRightOf="@+id/textView"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="30dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton"
        android:text="@string/vocabList"
        android:drawableTop="@mipmap/ic_vocablist"
        android:background="#FFFFFF"
        style="?android:attr/borderlessButtonStyle"
        android:clickable="true"
        android:onClick="goToOverallUserVocabOnClick"
        android:layout_below="@+id/imageButton2"
        android:layout_alignLeft="@+id/imageButton2"
        android:layout_alignStart="@+id/imageButton2"
        android:layout_marginTop="80dp" />
    <!--android:layout_alignRight="@+id/imageButton2"-->




</RelativeLayout>
