        <!--android:layout_marginRight="0dp" />-->

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Suggested Stories"
        android:id="@+id/suggestedReadingsButton"
        android:drawableTop="@mipmap/stories"
        style="?android:attr/borderlessButtonStyle"

        android:onClick="goToSuggestedStories"
        android:clickable="true"
        android:layout_marginBottom="55dp"
        android:layout_above="@+id/imageButton2"
        android:layout_centerHorizontal="true" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton2"
        android:text="@string/stories"
        android:drawableTop="@mipmap/allstories"
        android:clickable="true"

        android:onClick="goToStoriesSelectionOnClick"
        style="?android:attr/borderlessButtonStyle"
        android:layout_alignTop="@+id/imageButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingLeft="30dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton"
        android:text="@string/vocabList"
        android:drawableTop="@mipmap/vocab"

        style="?android:attr/borderlessButtonStyle"
        android:clickable="true"
        android:onClick="goToOverallUserVocabOnClick"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:paddingRight="30dp"
        android:paddingBottom="20dp" />
